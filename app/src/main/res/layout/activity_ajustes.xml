<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_azul_claro"
    tools:context=".AjustesActivity"
    tools:layout_editor_absoluteY="81dp">

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="16dp"
        android:soundEffectsEnabled="true"
        android:text="@string/Stream"
        android:textAlignment="center"
        android:textColor="#444"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtRadio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtRadio"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="84dp"
        android:autofillHints=""
        android:hint="@string/Stream"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_tv"
        tools:targetApi="o" />

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginBottom="191dp"
        android:background="@color/fundo_generico"
        android:drawableStart="@drawable/ok"
        android:text="@string/textoBotaoConfirmar"
        android:textAlignment="center"
        android:textColor="@color/itens_action_bar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRadio" />


</android.support.constraint.ConstraintLayout>